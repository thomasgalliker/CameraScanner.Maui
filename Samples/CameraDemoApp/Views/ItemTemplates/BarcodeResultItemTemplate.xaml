<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:c="http://camerascanner.maui"
    x:Class="CameraDemoApp.Views.ItemTemplates.BarcodeResultItemTemplate"
    x:DataType="c:BarcodeResult">

    <Grid
        ColumnDefinitions="Auto, *"
        ColumnSpacing="8"
        RowDefinitions="Auto, Auto"
        RowSpacing="4">
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Text="RawValue" />
        <Label
            Grid.Row="0"
            Grid.Column="1"
            Text="{Binding RawValue}" />
        <Label
            Grid.Row="1"
            Grid.Column="0"
            Text="BarcodeFormat" />
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Text="{Binding BarcodeFormat}" />
    </Grid>
</ContentView>
